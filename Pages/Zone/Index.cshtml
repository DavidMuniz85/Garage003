@page
@model Garage003.Pages.Zone.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zone[0].ZoneName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Zone) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ZoneName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ZoneId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ZoneId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ZoneId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
